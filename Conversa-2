nome = input ('Olá, qual é o seu nome? ')
print('É um prazer te conhecer {}! Me chamo robot, sou um sistema inteligente.'.format(nome))
idade = input ('Quantos anos voce tem {}? '.format(nome))
print('Nossa, {} anos, ainda é bem novo(a)!'.format(idade))
lugar = input ('Onde você mora {}? '.format(nome))
print('{} é um otimo lugar para morar!'.format(lugar))
morar = input ('{}, Você gosta de morar ai? '.format(nome))
porque = input ('Mas porque {}? '.format(morar))
print('Bom motivo!')
bom = input ('Oque tem de bom em {}? '.format(lugar))
print('Que bom que esta satisfeita em morar ai! Eu como um computador inteligente tenho mais coisas para fazer, até mais {}! Foi um prazer.'.format(nome))
